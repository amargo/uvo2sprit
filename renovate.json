{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:best-practices",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    ":pinDigestsDisabled",
    "workarounds:all",
    "abandonments:recommended",
    "schedule:monthly"
  ],
  "enabledManagers": [
    "dockerfile",
    "pip_requirements",
    "github-actions"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üì¶ Dependency Dashboard",
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "labels": [
      "security"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": false
    },
    {
      "matchManagers": [
        "dockerfile",
        "devcontainer"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "üêã Docker minor updates",
      "automerge": true,
      "pinDigests": false
    },
    {
      "matchManagers": [
        "dockerfile",
        "devcontainer"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "üö¢ Docker major updates",
      "pinDigests": false
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "groupName": "üêç Python minor updates"
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "üêç Python major updates",
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "groupName": "‚ö° GitHub Actions updates"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "groupName": "üîñ Patch updates"
    },
    {
      "description": "dateutil ritk√°n ad ki, ne legyen t√∫l szigor√∫ a k√ºsz√∂b",
      "matchPackageNames": [
        "python-dateutil"
      ],
      "abandonmentThreshold": "4 years"
    },
    {
      "description": "coloredlogs: ideiglenesen elfogadjuk",
      "matchPackageNames": [
        "coloredlogs"
      ],
      "abandonmentThreshold": "10 years"
    },
    {
      "description": "Hyundai/Kia API friss√ºlhet naponta",
      "matchPackageNames": [
        "hyundai_kia_connect_api"
      ],
      "schedule": [
        "* 0-3 * * *"
      ]
    }
  ]
}